<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>My Wikis</h1>
  </div>
</div>

<% @wikis.each do |wiki| %>
<div class="row">
  <div class="col-md-4 col-md-offset-2">
    <div class="list-group">
      <div class="list-group-item">       
        <strong><%= link_to wiki.title, wiki %></strong>
      </div>
    </div> 
  </div>
  
  <div class="col-md-1">
    <div class="list-group">  
      <div class="list-group-item"> 
        <div class="item-edit-delete">
          <%= link_to "Edit", edit_wiki_path(wiki.id)%>
        </div>
      </div> 
    </div>
  </div>
  
  <div class="col-md-2">
    <div class="list-group">
      <div class="list-group-item"> 
        <div class="item-edit-delete">
        <%= link_to "Delete", wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki!?' } %>
        </div>
      </div> 
    </div>
  </div>

</div>
<% end %>

  <div class="row pan7 text-center">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn-lg btn-success' %>
  </div>


