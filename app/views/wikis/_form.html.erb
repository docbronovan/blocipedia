
<%= form_for @wiki, do |wiki| %>
  <% if wiki.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(wiki.errors[:title]) do %>
    <%= f.text_area :title, rows: 1, class: 'form-control form-group-sm', style: 'width:50%;', placeholder: "Enter wiki title" %>
   <% end %>

   <%= form_group_tag(wiki.errors[:body]) do %>
     <%= f.text_area :body, rows: 2, class: 'form-control form-group-sm', style: 'width:50%;', placeholder: "Enter wiki body" %>
   <% end %>
   
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>

<% end %>